<script>
    //共用開窗
    function openDialog($select) {
        var dWidth = $(window).width() * 0.6,
            dHeight = $(window).height() * 0.8,
            $dialog = $select.dialog({
                resizable: false,
                autoOpen: false,
                height: dHeight,
                width: dWidth,
                modal: true
            });
        $dialog.parent().find(".ui-dialog-titlebar").hide();
        return $dialog;
    }
</script>

